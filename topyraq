<script>
    // –í–∫–ª—é—á–µ–Ω–∏–µ –∫–∞–º–µ—Ä—ã
    navigator.mediaDevices.getUserMedia({ video: true }).then(stream => {
        document.getElementById('camera').srcObject = stream;
    });

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è —Ñ–æ—Ç–æ
    function captureImage() {
        let video = document.getElementById('camera');
        let canvas = document.getElementById('snapshot');
        let context = canvas.getContext('2d');
        canvas.width = video.videoWidth;
        canvas.height = video.videoHeight;
        context.drawImage(video, 0, 0, canvas.width, canvas.height);
        alert("–§–æ—Ç–æ —Å–¥–µ–ª–∞–Ω–æ! (–ê–Ω–∞–ª–∏–∑ –º–æ–∂–Ω–æ –¥–æ–±–∞–≤–∏—Ç—å –ø–æ–∑–∂–µ)");
    }

    // –ü–æ–¥–∫–ª—é—á–µ–Ω–∏–µ –∫ –¥–∞—Ç—á–∏–∫—É –≤–ª–∞–∂–Ω–æ—Å—Ç–∏
    async function connectToSensor() {
        try {
            const device = await navigator.bluetooth.requestDevice({
                acceptAllDevices: true,
                optionalServices: ['battery_service']
            });
            const server = await device.gatt.connect();
            const service = await server.getPrimaryService('battery_service');
            const characteristic = await service.getCharacteristic('battery_level');

            characteristic.addEventListener('characteristicvaluechanged', event => {
                let moisture = event.target.value.getUint8(0);
                document.getElementById('moisture').innerText = `–í–ª–∞–∂–Ω–æ—Å—Ç—å: ${moisture}%`;
                updateAdvice(moisture);
            });

            await characteristic.startNotifications();
            alert("–î–∞—Ç—á–∏–∫ –ø–æ–¥–∫–ª—é—á–µ–Ω!");
        } catch (error) {
            alert("–û—à–∏–±–∫–∞: " + error);
        }
    }

    // –§—É–Ω–∫—Ü–∏—è –∞–Ω–∞–ª–∏–∑–∞ —Å–æ—Å—Ç–æ—è–Ω–∏—è
    function updateAdvice(moisture) {
        let advice = document.getElementById('advice');
        if (moisture < 30) {
            advice.innerText = "–†–∞—Å—Ç–µ–Ω–∏–µ –Ω—É–∂–¥–∞–µ—Ç—Å—è –≤ –ø–æ–ª–∏–≤–µ!";
        } else if (moisture > 70) {
            advice.innerText = "–°–ª–∏—à–∫–æ–º –º–Ω–æ–≥–æ –≤–æ–¥—ã, –¥–∞–π—Ç–µ –ø–æ—á–≤–µ –ø–æ–¥—Å–æ—Ö–Ω—É—Ç—å.";
        } else {
            advice.innerText = "–í–ª–∞–∂–Ω–æ—Å—Ç—å –≤ –Ω–æ—Ä–º–µ.";
        }
    }

    // –î–æ–±–∞–≤–ª–µ–Ω–∏–µ –∑–∞–ø–∏—Å–∏ –≤ –∫–∞–ª–µ–Ω–¥–∞—Ä—å
    function addWateringRecord() {
        let table = document.getElementById("calendar");
        let row = table.insertRow();
        let dateCell = row.insertCell(0);
        let timeCell = row.insertCell(1);
        let now = new Date();
        dateCell.innerText = now.toLocaleDateString();
        timeCell.innerText = now.toLocaleTimeString();
    }
</script>

